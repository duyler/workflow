{
    "name": "duyler/workflow",
    "type": "library",
    "description": "FSM-based workflow engine for long-running business processes",
    "license": "MIT",
    "keywords": [
        "fsm",
        "workflow",
        "state-machine",
        "business-process",
        "saga",
        "long-running"
    ],
    "authors": [
        {
            "name": "Mikhail Ilinsky",
            "email": "mail@milinsky.ru"
        }
    ],
    "support": {
        "docs": "https://duyler.org/en/docs/workflow/"
    },
    "require": {
        "php": "^8.4",
        "duyler/builder": "dev-main",
        "symfony/expression-language": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.30",
        "vimeo/psalm": "^6.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Duyler\\Workflow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Duyler\\Workflow\\Test\\": ["tests/"]
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src tests --level=9",
        "psalm": "psalm",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "check": [
            "@cs-fix",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
